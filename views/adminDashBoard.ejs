<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NEXUS Admin Dashboard</title>
  <link rel="stylesheet" href="./css/adminDashBoard.css">
</head>
<body>
  <header>
    <h1>Admin Dashboard</h1>
  </header>
  <nav>
    <div class="nav-bar">
      <a href="#project-management">Project Management</a>
      <a href="#user-management">User Management</a>
      <a href="#collaboration-hub">Collaboration Hub</a>
      <a href="#connection-hub">Connection Hub</a>
      <a href="#employment-platform">Employment Platform</a>
      <a href="#settings">Settings</a>
    </div>
  </nav>
  <section id="project-management">
    <h2>Project Management</h2>
    <table>
        <thead>
          <tr>
            <th>Project Name</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Project A</td>
            <td>Lorem ipsum dolor sit amet</td>
            <td>
              <button>Edit</button>
              <button>Delete</button>
            </td>
          </tr>
          <tr>
            <td>Project B</td>
            <td>Consectetur adipiscing elit</td>
            <td>
              <button>Edit</button>
              <button>Delete</button>
            </td>
          </tr>
        </tbody>
        </table>
      </section>
  <section id="user-management">
    <section id="user-management">
            <h2>User Management</h2>
            <%if(users.length>0){%>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <%for(let i=0;i<users.length;i++){%>

                        <tr>
                            <td><%=users[i]['fullname']%></td>
                            <td><%= users[i]['gmail'] %></td>
                            <td><%= users[i]['phno'] %></td>
                            <!-- Example button that triggers the delete request -->
                            <form action="/deleteuser" method="POST">
                              <input type="hidden" name="gmail" value="<%= users[i]['gmail'] %>">
                              <button type="submit">Delete User</button>
                            </form>
                            
  
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <%}%>
    </section>
    
  </section>    
  <section id="collaboration-hub">
    <h2>Collaboration Hub</h2><h3>Collaboration Groups</h3>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Members</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Group A</td>
          <td>Lorem ipsum dolor sit amet</td>
          <td>5</td>
          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
        <tr>
          <td>Group B</td>
          <td>Consectetur adipiscing elit</td>
          <td>10</td>
          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
        <!-- Add more group rows as needed -->
      </tbody>
    </table>
  </section>
  <section id="connection-hub">
    <h2>Connection Hub</h2>
    <h3>Connections</h3>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Project</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>John Doe</td>
          <td>Project A</td>
          <td>
            <button>Delete Connection</button>
          </td>
        </tr>
        <tr>
          <td>Jane Smith</td>
          <td>Project B</td>
          <td>
            <button>Delete Connection</button>
          </td>
        </tr>
        <!-- Add more connection rows as needed -->
      </tbody>
    </table>
  </section>
  <section id="employment-platform">
    <h2>Employment Platform</h2>
    <h3>Job Postings</h3>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Location</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Job Title A</td>
          <td>Lorem ipsum dolor sit amet</td>
          <td>Location A</td>
          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
        <tr>
          <td>Job Title B</td>
          <td>Consectetur adipiscing elit</td>
          <td>Location B</td>
          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
        <!-- Add more job posting rows as needed -->
      </tbody>
    </table>
  </section>
  <section id="settings">
    <h2>Settings</h2>
    <h3>Admin Account Settings</h3>
    <label for="username">Username:</label>
    <input type="text" id="username" value="Nexus" disabled> 
    <label for="password">Current Password:</label>
    <input type="password" id="old-password" placeholder="Enter current password">
    <label for="password">New Password:</label>
    <input type="password" id="password" placeholder="Enter new password">
    <button onclick="updatePassword()">Update Password</button>
    <form action="/logout" method="post">
        <button>Logout</button>
    </form>
  </section>
  <script src="./js/adminDashBoard.js"></script>
</body>
</html>
